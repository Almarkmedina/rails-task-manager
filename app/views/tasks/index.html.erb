<h1>My tasks</h1>

  <% @tasks.each do |task| %>
  <p>
    <%= check_box("tag", tag.id, {checked: task.completed}) %><%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: 'Are you sure?'} %>
  </p>
  <% end %>

  <%= link_to "Add a new task", new_task_path %>














